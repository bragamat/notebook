<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
      <td><%= link_to t('buttons.show'), address %></td>
      <td><%= link_to t('buttons.edit'), edit_address_path(address) %></td>
      <td><%= link_to t('buttons.destroy'), address, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new_address'), new_address_path %>
<%= link_to t('buttons.back'), home_index_path, class: "button" %>
